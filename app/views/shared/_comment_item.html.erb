<li id="<%= "comment_" + comment_item.id.to_s %>">
  <div class="comment_section">
    <div class="comment_image">
    <%= gravatar_for comment_item.user, 30 %>
    </div>
    <div>
  <span class="user">
    <%= link_to comment_item.user.name, comment_item.user %>
  </span>
  <span class="comment_content"><%= comment_item.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment_item.created_at) %> ago.
     <% if current_user?(comment_item.user) %>
    <%= link_to "delete", comment_item, :method => :delete,
                                     :data => { :confirm => "You sure?" },
                                     :title => comment_item.content %>
  <% end %>
  </span>
    </div>
  </div>
  </li>
