<li id="<%= "comment_" + comment_item.id.to_s %>">
  <div class="comment">
    <div class="content">
      <div class="comment-header">
        <a class="account-group" data-user-id="<% commented_user = comment_item.user
                                                  commented_user.id %>" href="<%= user_path(commented_user)%>">
          <%= image_tag commented_user.avatar.url(:thumb), :size => "32x32", :class => "avatar" %>
          <strong class="fullname"><%= commented_user.name %></strong>
        </a>
      </div>
      <p class="comment-text" >
        <%= comment_item.content %>
      </p>
      <div class="comment-footer">
        <span class="timestamp">
    Posted <%= time_ago_in_words(comment_item.created_at) %> ago.
          <% if current_user?(commented_user) || comment_item.micropost.user.name == current_user.name %>
    <%= link_to "delete", comment_item, :method => :delete,
                :data => { :confirm => "You sure?" },
                :title => comment_item.content, :remote => true %>
  <% end %>
  </span>
      </div>
    </div>
  </div>
  </li>
