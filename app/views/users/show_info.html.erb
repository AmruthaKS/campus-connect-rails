<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4 left_bar">
    <section>
      <h1>
        <%= image_tag @user.avatar.url(:thumb), :size => "50x50"  %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section class="favorite_links">
      	<%= render 'users/user_links'%>
      </section>
  </aside>

  	
  <div class="span8 feed_content">
  	<%= render 'user_details_top' %>
  	<% if @user.colleges.any? %>
      <h3>Education:</h3>
      <%= render 'user_colleges'%>
   <% end %>
    </div>
  <aside class="span4 right_bar">
    	<%= render 'shared/misc' %>
  </aside>
</div>