
<% if !@college.departments.blank? %>
  <% for department in @college.departments %>
  	var option = new Option('<%= department.name %>', '<%= department.id %>')
  	option.id = 'dept_<%= department.id %>'
    $('#user_college_department').append(option);
  <% end %>
<% else %>
<% end %>

var hiddenInput = document.createElement("input");
hiddenInput.setAttribute("type", "hidden");
hiddenInput.setAttribute("name", "user_college[college_id]");
hiddenInput.setAttribute("value", "<%= @college.id %>");
alert('adding hidden')
