<% provide(:title, 'New Dept.') %>
<h1>New Department</h1>

<div class="row">
  <div class="span6 offset3 autoTextHeight">
    <%= form_for(@group) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <%= f.label :name %><br />
    <%= f.text_field :name %>


 <%= f.hidden_field :admin_id, :value => current_user.id %>
 <%= f.hidden_field :college_id, :value => @current_department.college.id %>
 <%= f.hidden_field :department_id, :value => @current_department.id  %>

        <%= image_tag @group.avatar.url(:large), :size => "320x320"  %>
        <%= f.file_field :avatar %>

     <%= f.submit "Create Group.", :class => "btn btn-large btn-primary" %>
<% end %>
  </div>
</div>
