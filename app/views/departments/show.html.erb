<% if signed_in? %>
<%= render 'department_profile' %>
<%= render 'department_dashboard' %>

    <div class="content-main" id="timeline" role="main">
      <% if has_read_access_for_dept?(@department, current_user.id) %>
		<% if has_write_access_for_dept?(@department.id, current_user.id) %>
            <div class="post_form" id ="post_form">
			<%= render 'departments/post_form' %>
            </div>
		<% end %>
          <div class="stream-container conversations-enabled persistent-inline-actions light-inline-actions">
            <div class="feed home-feed">
		        <%= render 'shared/feed' %>
            </div>
          </div>
      <% end %>
	</div>

<% else %>
<%= redirect_to root_url %>
<% end %>
